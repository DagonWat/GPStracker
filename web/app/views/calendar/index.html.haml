.row
  .content.col-md-6.col-md-offset-3
    .month{style: "background:#{@color}"}
      %ul
        - if @diff > 0
          %li.prev
            = link_to '❮', calendar_path(date: @diff - 1)
        %li.next
          = link_to '❯', calendar_path(date: @diff + 1)
        %li
          = @month
          %br/
          %span{:style => "font-size:18px"}= @year
    %ul.weekdays
      %li Mo
      %li Tu
      %li We
      %li Th
      %li Fr
      %li Sa
      %li Su
    %ul.days
      - for i in 0..(@state.wday - 2)
        %li

      - for i in 1..(@last)
        - if @ids[i]
          %li
            %span.active
              = link_to i, dashboard_path(id: @ids[i])
        - else
          %li= i
