#main-container.container-fluid
  .row
    .content.col-md-4.col-md-offset-4
      .panel.panel-primary{align: "center"}
        .panel-heading{style: "background-color : rgba(255,0,0, 0.5)"}
          %h1 Admin info
        .panel-body
          .field
            %p
              %strong Email:
              = current_user.email
          .field
            %p
              %strong Created at:
              = current_user.created_at
          = link_to 'Destroy User', admin_profile_path, method: :delete, data: { confirm: 'Are you sure you want to delete your account?'}
