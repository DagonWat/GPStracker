#main-container.container-fluid
  - if flash[:notice]
    .row
      .content.col-md-4.col-md-offset-4
        .jumbotron{align: 'center'}
          .notice= flash[:notice]
  .row
    .content.col-md-4.col-md-offset-4
      .panel.panel-primary{align: 'center'}
        .panel-heading{style: 'background-color : rgba(0,255,0, 0.5)'}
          %h1 Users info
        .panel-body
          .field
            %p
              %strong Email:
              = @user.email
          .field
            %p
              %strong Created at:
              = @user.created_at
