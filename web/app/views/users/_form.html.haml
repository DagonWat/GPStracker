= form_with(model: user, local: true) do |form|
  .row
    .content.col-md-4.col-md-offset-4
      .panel.panel-primary
        .panel-heading
          .h1= current_user ? 'Change User' : 'Sign Up'
        .panel-body
          - if user.errors.any?
            .alert.alert-danger{:role => "alert"}
              %ul
                - user.errors.full_messages.each do |message|
                  %li= message

          .field
            .form-group
              %label{:for => "exampleInputEmail1"} Email address
              - if current_user
                %input#exampleInputEmail1.form-control{"aria-describedby" => "emailHelp", :placeholder => "example@gmail.com", :type => "email", name: :'user[email]', value: current_user.email}/
              - else
                %input#exampleInputEmail1.form-control{"aria-describedby" => "emailHelp", :placeholder => "example@gmail.com", :type => "email", name: :'user[email]'}/
              %small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
          .field
            .form-group
              %label{:for => "exampleInputPassword1"} Password
              %input#exampleInputPassword1.form-control{:placeholder => "Password", :type => "password", name: :'user[password]'}/

          .field
            .form-group
              %label{:for => "exampleInputPassword2"} Check password
              %input#exampleInputPassword1.form-control{:placeholder => "Password", :type => "password", name: :'user[password_confirmation]'}/

          .field{:align => "center"}
            =form.submit (current_user ? 'Change' : 'Create'), class: "btn btn-primary"
