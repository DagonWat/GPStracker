!!!
#main-container.container-fluid{data: {list: @path.to_json}}
  %head
    :css
      #map
      {
        height: 75%;
      }
      html, body
      {
        height: 100%;
        margin: 0;
        padding: 0;
      }

  .row
    .content.col-md-3.col-xs-3
      %h1
        = link_to "GPS Tracker",
          root_path(), method: :get
    .content.col-md-9.col-xs-9
      %table.table
        %tr
          - m = ""
          - n = ""
          - @trackers.each do |tracker|
            - m = tracker.created_at.strftime("%b  %e")
            - if n != m
              - n = m
              %th
                = link_to tracker.created_at.strftime("%b  %e"),
                    dashboard_path(tracker), method: :get

%script{:async => "", :defer => "defer",
  :src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyBBJehlZdShzoTdNZUNrMncq9G4kK8y7cw&callback=initMap"}
#map
