- if Tracker.where(user_id: current_user).any?
  - m = ''
  - n = ''
  - @trackers.each do |tracker|
    - m = tracker.created_at.strftime('%b  %e')
    - if n != m
      - n = m
      %li
        = link_to tracker.created_at.strftime('%b  %e'),
                    dashboard_path(id: tracker)
- else
  %option{:disabled => "disabled", :selected => "selected"} You don't have any tracks
