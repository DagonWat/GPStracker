= form_tag user_sessions_path, :method => :post do
  .panel.panel-default{:align => "center"}
    .panel-body
      .h1 Login
    .panel-footer
      .field
        = label_tag :email
        %br/
        = text_field_tag :email
      .field
        = label_tag :password
        %br/
        = text_field_tag :password
      .actions
        = submit_tag "Login"
