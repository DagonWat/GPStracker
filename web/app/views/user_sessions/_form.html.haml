= form_tag user_sessions_path, :method => :post do
  .row
    .content.col-md-4.col-md-offset-4
      .panel.panel-primary
        .panel-heading
          %h1 Login
        .panel-body
          - if flash[:alert]
            .alert.alert-danger{:role => "alert"}
              %ul
                %li= flash[:alert]

          .field
            .form-group
              %label{:for => "exampleInputEmail1"} Email address
              %input#exampleInputEmail1.form-control{"aria-describedby" => "emailHelp", :placeholder => "example@gmail.com", :type => "email", name: :email}/
          .field
            .form-group
              %label{:for => "exampleInputPassword1"} Password
              %input#exampleInputPassword1.form-control{:placeholder => "Password", :type => "password", name: :password}/
          .field{:align => "center"}
            = link_to 'Forgot Password?', new_password_reset_path
          .field{:align => "center"}
            = button_to("Login", { action: "create" }, class: "btn btn-primary")
