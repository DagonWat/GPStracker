= form_tag login_path, method: :post do
  - if flash[:notice]
    .row
      .content.col-md-4.col-md-offset-4
        .jumbotron{align: 'center'}
          .notice= flash[:notice]
  .row
    .content.col-md-4.col-md-offset-4
      .panel.panel-primary
        .panel-heading
          %h1 Login
        .panel-body
          - if flash[:alert]
            .alert.alert-danger{role: 'alert'}
              %ul
                %li= flash[:alert]

          .field
            .form-group
              %label{for: 'inputEmail1'} Email address
              %input#inputEmail1.form-control{'aria-describedby': 'emailHelp', placeholder: 'example@gmail.com', type: 'email', name: :email}/
          .field
            .form-group
              %label{for: 'inputPassword1'} Password
              %input#inputPassword1.form-control{placeholder: 'Password', type: 'password', name: :password}/
          .field{align: 'center'}
            = link_to 'Forgot Password?', new_password_reset_path
          .field{align: 'center'}
            = button_to('Login', { action: 'create' }, class: 'btn btn-primary')
