= form_tag user_sessions_path, :method => :post do
  .row
    .content.col-md-4.col-md-offset-4
      .panel.panel-primary{:align => "center"}
        .panel-heading
          %h1 Login
        .panel-body
          .field
            = label_tag :email
            %br/
            = text_field_tag :email
          .field
            = label_tag :password
            %br/
            = password_field_tag :password
          = button_to("Login", { action: "create" }, class: "btn btn-primary")
