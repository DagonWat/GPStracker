= form_with(local: true, url: profile_path, method: :put,  html: { multipart: true }) do |form|
  .row
    .content.col-md-4.col-md-offset-4
      .panel.panel-primary
        .panel-heading
          .h1{align: 'center'} Change User
        .panel-body
          - if current_user.errors.any?
            .alert.alert-danger{role: 'alert'}
              %ul
                - current_user.errors.full_messages.each do |message|
                  %li= message
          .field
            .form-group
              .h2{align: 'center'}
                %i=current_user.email
              .p{align: 'center'}
                = image_tag (current_user.custom_avatar==nil ? current_user.avatar.thumb.url : current_user.custom_avatar_thumb)
          .field
            .form-group
              %label{for: 'exampleInputPassword1'} Password
              %input#inputPassword1.form-control{placeholder: 'Password', type: 'password', name: 'user[password]'}
          .field
            .form-group
              %label{for: 'exampleInputPassword2'} Confirm password
              %input#inputPassword2.form-control{placeholder: 'Password', type: 'password', name: 'user[password_confirmation]'}

          .field{align: 'center'}
            =form.submit 'Change', class: 'btn btn-primary'
