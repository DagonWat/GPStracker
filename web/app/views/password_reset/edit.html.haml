= form_with(local: true, url: password_reset_path, method: :put) do |form|
  .row
    .content.col-md-4.col-md-offset-4
      .panel.panel-primary
        .panel-heading{align: :center}
          .h1 New password
        .panel-body
          - if @user.errors.any?
            .alert.alert-danger{:role => "alert"}
              %ul
                - user.errors.full_messages.each do |message|
                  %li= message
          .field
            .form-group
              %label{:for => "exampleInputPassword1"} Password
              %input#exampleInputPassword1.form-control{:placeholder => "Password", :type => "password", name: :'user[password]'}/

          .field
            .form-group
              %label{:for => "exampleInputPassword1"} Check password
              %input#exampleInputPassword1.form-control{:placeholder => "Password", :type => "password", name: :'user[password_confirmation]'}/
          .field{:align => "center"}
            =form.submit 'Change', class: 'btn btn-primary'
