= form_tag password_reset_path, :method => :post do
  .row
    .content.col-md-4.col-md-offset-4
      .panel.panel-primary
        .panel-heading
          .h1=@act
        .panel-body
          - if flash[:alert]
            .alert.alert-success{:role => "alert"}
              %ul
                %li= flash[:alert]
          .field
            .form-group
              %label{:for => "exampleInputEmail1"} Email address
              %input#exampleInputEmail1.form-control{"aria-describedby" => "emailHelp", :placeholder => "example@gmail.com", :type => "email", name: :email}/
          .field{:align => "center"}
            = button_to("Reset my password!", { action: "new" }, class: "btn btn-primary")
