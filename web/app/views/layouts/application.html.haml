!!!
%html
  %head
    %title GPS Tracker
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    .row
      .content.col-md-12
        %nav.navbar.navbar-inverse
          .container-fluid
            - if !current_user
              %ul.nav.navbar-nav.col-md-10
                %li
                  = link_to 'GPS Tracker', root_path
              %ul.nav.navbar-nav.navbar-right.col-md-2
                %li
                  = link_to 'Sign Up', new_registration_path
                %li
                  = link_to 'Login', login_path
            - elsif !current_user.admin
              %ul.nav.navbar-nav.col-md-10
                %li
                  = link_to 'GPS Tracker', root_path
                %li
                  = link_to 'Edit Profile', edit_profile_path
                %li
                  = link_to 'Friends', friends_path
              %ul.nav.navbar-nav.navbar-right.col-md-1
                %li
                  = link_to 'Logout', :logout, method: :post
            - else
              %ul.nav.navbar-nav.col-md-10
                %li
                  = link_to 'GPS Tracker', root_path
                %li
                  = link_to 'All Users', admin_users_path
                %li
                  = link_to 'Edit Profile', edit_admin_profile_path

              %ul.nav.navbar-nav.navbar-right.col-md-2
                %li
                  = link_to 'New User', new_admin_user_path
                %li
                  = link_to 'Logout', :logout, method: :post


    = yield
